<%= form_for(object.comments.build, {remote: true}) do |comment_fields| %>
  <%= comment_fields.hidden_field :commentable_type, value: object.class %>
  <%= comment_fields.hidden_field :commentable_id, value: object.id %>
  <%= comment_fields.text_area :content, :class => "form-control", rows: 3, placeholder: "Leave a comment!" %>
  <%= comment_fields.submit 'Comment!', :class => "btn btn-large btn-primary btn-block" %>
<% end %>
