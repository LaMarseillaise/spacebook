<div class="col-xs-12">
  <div class="panel panel-info">
    <div class="panel-body">
      <%= link_to(profile_photo(user, :thumb, "pull-left post-picture"), user) %>

      <div class="pull-right">
        <p class="text-right"><%= friend_button(user) %></p>
        <p class="text-right"><%= decline_button(user) %></p>
      </div>

      <p><%= link_to user.name, user %></p>

      <p>
        <%= "#{user.friends.count} friends" %>
        <% if user.profile.current_town.present? %>
          | Lives in <%= user.profile.current_town %>
        <% end %>
      </p>
    </div>
  </div class="panel">
</div>
