<div class="col-md-6">
  <div class="row">
    <div class="col-xs-3">
      <%= link_to(profile_photo(user, :medium, "img-responsive img-thumbnail"), user) %>
    </div>
    <div class="col-xs-6">
      <p><%= link_to user.name, user %></p>
      <p><%= "#{user.friends.count} friends" %></p>
      <% if user.profile.current_town.present? %>
        <p>Lives in <%= user.profile.current_town %></p>
      <% end %>
    </div>
    <div class="col-xs-3">
      <%= friend_button(user) %>
      <%= decline_button(user) %>
    </div>
  </div>
</div>
