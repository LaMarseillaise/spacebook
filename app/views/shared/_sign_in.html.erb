<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
      html: { class: "navbar-form navbar-right" } ) do |f| %>
    <div class="form-group">
      <%= f.input :email, required: false, autofocus: true, placeholder: "email", label: false, input_html: { class: "form-control" } %>
    </div>

    <div class="form-group">
      <%= f.input :password, required: false, placeholder: "password", label: false, input_html: { class: "form-control" } %>
    </div>

    <div class="form-group">
      <%= f.input :remember_me, as: :boolean, label: false, inline_label: true if devise_mapping.rememberable? %>
    </div>

    <div class="form-group">
      <%= f.button :submit, "Sign In", class: "btn btn-primary" %>
    </div>
<% end %>
