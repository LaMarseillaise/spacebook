<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
      html: { class: "navbar-form navbar-right" },
      defaults: { wrapper_html: { class: "form-group" },
                  label: false, error: false }) do |f| %>

  <%= f.input :email, required: false, autofocus: true, placeholder: "email", input_html: { class: "form-control" } %>

  <%= f.input :password, required: false, placeholder: "password", input_html: { class: "form-control" } %>

  <%= f.input :remember_me, as: :boolean, inline_label: " Remember" %>

  <%= f.button :submit, "Sign In", class: "btn btn-primary" %>
<% end %>
