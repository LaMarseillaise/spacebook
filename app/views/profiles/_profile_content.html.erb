<section class="panel panel-primary">
  <header class="panel-heading text-center">
    About
  </header>

  <section class = "panel panel-body">
    <div class = "col-sm-6">
      <h3>Basic Information</h3>
      <table class="table">
        <tr>
          <td>Birthday:</td>
          <td><%= @user.birthday %></td>
        </tr>
        <tr>
          <td>College:</td>
          <td><%= @profile.school %></td>
        </tr>
        <tr>
          <td>Hometown:</td>
          <td><%= @profile.hometown %></td>
        </tr>
        <tr>
          <td>Currently Lives:</td>
          <td><%= @profile.current_town %></td>
        </tr>
      </table>

      <h3>Contact Information</h3>
      <table class="table">
        <tr>
          <td>Email:</td>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <td>Telephone:</td>
          <td><%= @profile.phone_number %></td>
        </tr>
      </table>
    </div>

    <div class = "col-sm-6">
      <h3>About me</h3>
      <p><%= @profile.about %></p>

      <% if @profile.quotes.present? %>
        <h3>Words to live by</h3>
        <p><%= @profile.quotes %></p>
      <% end %>
    </div>
  </section>

  <footer class="panel-footer">
    <%= edit_profile_button(@user, "btn btn-large btn-primary btn-block") %>
  </footer>
</section>
